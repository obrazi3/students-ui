{
	"extends": ["codelyzer", "tslint-eslint-rules", "tslint-config-prettier"],
	"rulesDirectory": ["tslint-plugin-prettier", "tslint-custom-rules"],
	"rules": {
		"prettier": true,
		"curly": true,
		"class-name": true,
		"no-arg": true,
		"no-construct": true,
		"no-debugger": true,
		"no-duplicate-variable": true,
		"no-unused-expression": true,
		"no-var-keyword": true,
		"no-conditional-assignment": true,
		"no-empty": true,
		"no-console": [true, "log"],
		"no-switch-case-fall-through": true,
		"forin": true,
		"no-bitwise": true,
		"no-eval": true,
		"no-angle-bracket-type-assertion": true,
		"triple-equals": [true, "allow-null-check"],
		"use-isnan": true,
		"one-variable-per-declaration": [true, "ignore-for-loop"],
		"no-unsafe-finally": true,
		"object-literal-shorthand": true,
		"no-constant-condition": true,
		"no-duplicate-case": true,
		"no-empty-character-class": true,
		"no-ex-assign": true,
		"no-extra-boolean-cast": true,
		"no-sparse-arrays": true,
		"array-type": [true, "array"],
		"prefer-for-of": true,
		"ter-prefer-arrow-callback": [true],
		"prefer-const": true,
		"arrow-return-shorthand": [true],
		"no-misused-new": true,
		"prefer-method-signature": true,
		"no-duplicate-super": true,
		"prefer-template": [true, "allow-single-concat"],
		"no-unnecessary-callback-wrapper": true,
		"no-invalid-template-strings": true,
		"prefer-switch": true,
		"interface-name": [true, "always-prefix"],
		"ban-types": [true, ["Object", "Use object instead."]],
		"no-empty-interface": true,
		"member-access": false,
		"typedef": [true, "parameter"],
		"no-this-assignment": true,
		"encoding": true,
		"prefer-object-spread": true,
		"binary-expression-operand-order": true,
		"no-duplicate-imports": true,
		"template-banana-in-box": true,
		"contextual-lifecycle": true,
		"contextual-decorator": true,
		"no-attribute-decorator": true,
		"no-unused-css": true,
		"use-lifecycle-interface": true,
		"use-pipe-decorator": true,
		"use-pipe-transform-interface": true,
		"use-component-view-encapsulation": true,
		"component-class-suffix": true,
		"component-selector": [true, "element", "app", "kebab-case"],
		"directive-class-suffix": true,
		"directive-selector": [true, "attribute", "app", "camelCase"],
		"no-host-metadata-property": true,
		"no-inputs-metadata-property": true,
		"no-outputs-metadata-property": true,
		"no-return-await": true,
		"no-duplicate-switch-case": true,
		"no-unnecessary-class": [true, "allow-empty-class", "allow-constructor-only"],
		"ban-comma-operator": true,
		"no-inferrable-types": [true, "ignore-params", "ignore-properties"],
		"prefer-while": true,

		"no-unused-map": true,
		"get-should-return-smth": true,
		"includes-instead-of-index-of": true,
		"includes-instead-of-find": true
	}
}
